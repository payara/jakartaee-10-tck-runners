<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>tck-download</artifactId>
        <groupId>fish.payara.jakarta.tests.tck</groupId>
        <version>1.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>jakarta-rest-tck</artifactId>

    <properties>
        <tck.basename>jakarta-restful-ws-tck-${jakarta-rest-tck.version}</tck.basename>
        <tck.download.url>https://download.eclipse.org/jakartaee/restful-ws/4.0/${tck.basename}.zip</tck.download.url>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>com.googlecode.maven-download-plugin</groupId>
                <artifactId>download-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>download-servlet-tck</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <url>${tck.download.url}</url>
                    <unpack>true</unpack>
                    <outputDirectory>${project.build.directory}</outputDirectory>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-install-plugin</artifactId>
                <executions>
                    <execution>
                        <id>install-servlet-tck</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <generatePom>true</generatePom>
                            <groupId>jakarta.ws.rs</groupId>
                            <artifactId>jakarta-restful-ws-tck</artifactId>
                            <version>${jakarta-rest-tck.version}</version>
                            <file>${project.build.directory}${file.separator}restful-ws-tck${file.separator}artifacts${file.separator}${tck.basename}.jar</file>
                            <sources>${project.build.directory}${file.separator}restful-ws-tck${file.separator}artifacts${file.separator}${tck.basename}-sources.jar</sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>